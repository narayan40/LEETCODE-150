class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        if(nums.size() == 0) return 0;

        int i = 0;
        int j = nums.size() - 1;

        while (i <= j) {
            if (nums[i] == val && nums[j] == val) {
                j--;
            } else if (nums[i] == val && nums[j] != val) {
                swap(nums[i], nums[j]);
                j--;
                // do not increment i â€” check swapped-in value again
            } else {
                i++;
            }
        }

        return j + 1;
    }
};
